@using Microsoft.AspNetCore.Identity;
@model List<IdentityRole>


<h3>All roles in the system</h3>

<a href="/auth/addrole" class="btn btn-success">Add New Role</a>
<table class="table">
    <tr>
        <th>SN</th>
        <th>Name</th>
    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@(i + 1)</td>
            <td>@Model[i].Name</td>
        </tr>
    }
</table>